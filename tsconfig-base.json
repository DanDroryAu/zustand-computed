{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": false,
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*/*.test.*",
    "**/*/*.spec.*",
    "node_modules",
    "dist",
    "coverage",
    "example",
    "babel.config.js",
    "jest.config.js"
  ]
}
